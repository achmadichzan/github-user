import { HorizontalBox } from "std-widgets.slint";
import { Theme } from "theme.slint";

export component UserRow inherits Rectangle {
    in property <string> login;
    in property <image> avatar;
    callback clicked();

    height: 56px;
    border-radius: 10px;
    background: ta.has-hover ? Theme.bg-card : transparent;

    ta := TouchArea {
        clicked => { root.clicked(); }
    }

    HorizontalBox {
        padding-left: 12px;
        padding-right: 12px;
        spacing: 12px;
        alignment: start;

        // Avatar thumbnail
        Rectangle {
            width: 40px;
            height: 40px;
            border-radius: 20px;
            clip: true;
            vertical-stretch: 0;

            Image {
                source: root.avatar;
                width: 40px;
                height: 40px;
                image-fit: cover;
            }
        }

        // Username
        Text {
            text: root.login;
            font-size: 15px;
            font-weight: 500;
            color: Theme.text-secondary;
            vertical-alignment: center;
        }
    }
}
